            result.M11 = cos;
            result.M12 = sin;
            result.M13 = 0;
            result.M20 = 0;
            result.M21 = -sin;
            result.M22 = cos;
            result.M23 = 0;
            result.M30 = 0;
            result.M31 = 0;
            result.M32 = 0;
            result.M33 = 1;
        }

